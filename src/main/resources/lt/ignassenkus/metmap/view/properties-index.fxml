<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lt.ignassenkus.metmap.controller.PropertiesIndexController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Label for errors -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label fx:id="statusLabel" text="Make sure to fill all the properties."/>
    </HBox>

    <!-- Content For specifying header row -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Starting Row (first value which to read)"/>
        <TextField fx:id="startRowIndexField" promptText="0...N"/>
        <Button onAction="#onButtonApply" text="Apply"/>
    </HBox>

    <!-- Content around the chosen row -->
    <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT">
        <Label text="Line Above:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="labelAbove" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Chosen Line:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="labelChosen" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Line Below:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="labelBelow" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <!-- Save & exit button -->
    <Button text="Confirm &amp; close" onAction="#onButtonApplyAndClose"/>

</VBox>
