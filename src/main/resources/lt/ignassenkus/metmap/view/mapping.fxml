<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ListView?>
<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="400.0"
            minWidth="500.0"
            prefHeight="800.0"
            prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lt.ignassenkus.metmap.controller.MappingController">
    <top>
        <!-- Buttons for navigating screens -->
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button text="Go Back" onAction="#onBackButtonClick"/>
                <Button text="Settings" onAction="#onSettingsButtonClick"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Mapping tool"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            </HBox>
            <!-- Area to include/prepare files -->
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <!-- First element (for Metadata) -->
                <Label text="Metadata File:"/>
                <TextField fx:id="metadataPathField"
                           editable="false" promptText="No file selected" GridPane.columnIndex="1"/>
                <Button text="Browse File..." onAction="#onButtonBrowseMetadataClick"
                        mnemonicParsing="false" GridPane.columnIndex="2"/>
                <Button text="Properties" onAction="#onMetadataPropertiesButtonClick"
                        GridPane.columnIndex="3"/>
                <!-- Second element (for Indexes) -->
                <Label text="Index File:" GridPane.rowIndex="1"/>
                <TextField fx:id="indexPathField" editable="false" promptText="No file selected"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button text="Browse File..." onAction="#onButtonBrowseIndexPathClick"
                        mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button text="Properties" onAction="#onIndexButtonClick"
                        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <!-- Third element (for Samples) -->
                <Label text="Sample Folder:" GridPane.rowIndex="2"/>
                <TextField fx:id="samplesPathField" editable="false" promptText="No folder selected"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button text="Browse Folder..." onAction="#onButtonBrowseSamplesPathClick"
                        mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Button text="Properties" onAction="#onSamplesButtonClick"
                        GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            </GridPane>
            <!-- Button to compile, save map and label to inform of status -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button text="Compile"/>
                <Button text="Save"/>
                <Label fx:id="statusLabel" text="Add files for compiling."/>
            </HBox>
            <Separator prefWidth="200.0"/>
        </VBox>
    </top>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label text="Genome Methylation Map">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                </children>
            </HBox>

            <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 4;" VBox.vgrow="ALWAYS">
                <children>
                    <LineChart fx:id="methylationChart" createSymbols="false" title="Methylation Level per Base Pair"
                               VBox.vgrow="ALWAYS">
                        <xAxis>
                            <NumberAxis label="Genomic Position" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Methylation %" side="LEFT" upperBound="100.0"/>
                        </yAxis>
                    </LineChart>
                </children>
            </VBox>
        </VBox>
    </center>

    <right>
        <VBox spacing="10.0" prefWidth="250.0" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 0 1; -fx-background-color: #fcfcfc;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Methylation Zones" textFill="#666666">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="locationCountLabel" text="0 Found">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Separator prefWidth="200.0" />

                <ListView fx:id="locationListView" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: #eeeeee;" />
            </children>
        </VBox>
    </right>

    <bottom>
        <VBox prefHeight="300.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-width: 1 0 0 0; -fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Filter Manager">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" /> <Button fx:id="btnAddFilter" mnemonicParsing="false" text="+ Add New Filter" style="-fx-base: #e0e0e0; -fx-font-weight: bold;"/>
                    </children>
                </HBox>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="activeFiltersContainer" spacing="8.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 4; -fx-background-radius: 4;">
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <CheckBox selected="true" text="CpG Islands (High Density)" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </CheckBox>

                                        <Region HBox.hgrow="ALWAYS" />

                                        <Button mnemonicParsing="false" text="Properties">
                                            <font>
                                                <Font size="11.0" />
                                            </font>
                                            <tooltip>
                                                <Tooltip text="View Filter Settings" />
                                            </tooltip>
                                        </Button>

                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #cc0000; -fx-font-weight: bold;" text="DELETE" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 4; -fx-background-radius: 4;">
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <CheckBox text="Promoter Regions (2000bp)" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </CheckBox>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button mnemonicParsing="false" text="Properties">
                                            <font>
                                                <Font size="11.0" />
                                            </font>
                                        </Button>
                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #cc0000; -fx-font-weight: bold;" text="DELETE" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </bottom>
</BorderPane>