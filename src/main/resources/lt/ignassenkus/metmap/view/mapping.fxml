<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="400.0"
            minWidth="500.0"
            prefHeight="800.0"
            prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lt.ignassenkus.metmap.controller.MappingController">
    <top>
        <!-- Buttons for navigating screens -->
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button text="Go Back" onAction="#onBackButtonClick"/>
                <Button text="Settings" onAction="#onSettingsButtonClick"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Mapping tool"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            </HBox>
            <!-- Area to include/prepare files -->
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <!-- First element (for metadata) -->
                <Label text="Metadata File:"/>
                <TextField fx:id="metadataPathField"
                           editable="false" promptText="No file selected" GridPane.columnIndex="1"/>
                <Button text="Browse File..." onAction="#onButtonBrowseMetadataClick"
                        mnemonicParsing="false" GridPane.columnIndex="2"/>
                <Button text="Properties" onAction="#onMetadataPropertiesButtonClick"
                        GridPane.columnIndex="3"/>
                <!-- Second element (for indexes) -->
                <Label text="Index File:" GridPane.rowIndex="1"/>
                <TextField fx:id="indexPathField" editable="false" promptText="No file selected"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button text="Browse File..." onAction="#onButtonBrowseIndexPathClick"
                        mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button text="Properties" onAction="#onIndexPropertiesButtonClick"
                        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <!-- Third element (for samples) -->
                <Label text="Sample Folder:" GridPane.rowIndex="2"/>
                <TextField fx:id="samplesPathField" editable="false" promptText="No folder selected"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button text="Browse Folder..." onAction="#onButtonBrowseSamplesPathClick"
                        mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <!-- Fourth element (for porcessed samples) -->
                <Label text="Processed Sample Folder:" GridPane.rowIndex="3"/>
                <TextField fx:id="processedSamplesPathField" editable="false" promptText="No folder selected"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button text="Browse Folder..." onAction="#onButtonBrowseProcessedSamplesPathClick"
                        mnemonicParsing="false" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            </GridPane>
            <!-- Button to compile, save map and label to inform of status -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button text="Compile" onAction="#onCompileClick"/>
                <Button text="Save Map To..." onAction="#onExportDMRClick"/>
                <Label fx:id="statusLabel" text="Add files for compiling."/>
            </HBox>
            <Separator prefWidth="200.0"/>
        </VBox>
    </top>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label text="Genome Methylation Map">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                </children>
            </HBox>

            <VBox style="-fx-border-color: #cccccc; -fx-border-radius: 4;" VBox.vgrow="ALWAYS">
                <children>
                    <LineChart fx:id="methylationChart" createSymbols="false" title="Methylation Level per Base Pair"
                               VBox.vgrow="ALWAYS">
                        <xAxis>
                            <NumberAxis label="Genomic Position" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Methylation %" side="LEFT" upperBound="100.0"/>
                        </yAxis>
                    </LineChart>
                </children>
            </VBox>
        </VBox>
    </center>

    <right>
        <VBox spacing="10.0" prefWidth="400.0"
              style="-fx-border-color: #cccccc; -fx-border-width: 0 0 0 1; -fx-background-color: #fcfcfc;"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox spacing="2.0">
                <Label text="Methylation Zones" textFill="#666666">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <Label fx:id="locationCountLabel" text="0 Found">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
            </VBox>

            <Separator prefWidth="200.0"/>

            <ListView fx:id="locationListView" VBox.vgrow="ALWAYS"/>

        </VBox>
    </right>

    <bottom>
        <VBox spacing="10" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Active Pipeline Filters" style="-fx-font-weight: bold; -fx-text-fill: #555555;"/>
                <Region HBox.hgrow="ALWAYS" />

                <MenuButton text="Add New Filter..." style="-fx-base: #e1e1e1;">
                    <items>
                        <MenuItem text="Sliding Window" onAction="#onAddSlidingWindowClick"/>
                    </items>
                </MenuButton>

                <Button text="Remove Selected" onAction="#onRemoveFilterClick"
                        style="-fx-text-fill: #cc0000; -fx-background-color: transparent; -fx-border-color: #cc0000; -fx-border-radius: 3;"/>
            </HBox>

            <ListView fx:id="filterListView" prefHeight="120"
                      style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dddddd;"/>
        </VBox>
    </bottom>
</BorderPane>