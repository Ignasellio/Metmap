<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lt.ignassenkus.metmap.controller.SettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Settings"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <CheckBox fx:id="CheckToVisualize"/>
        <Label text="show visualizations"/>
    </HBox>
    <HBox spacing="8" alignment="CENTER_LEFT">
        <CheckBox fx:id="CheckToEmptyFolder"/>
        <Label text="empty the processed sample folder on exit"/>
    </HBox>

    <Button text="Save &amp; exit" onAction="#onBackButtonClick"/>
</VBox>
